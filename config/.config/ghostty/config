# Ghostty 設定ファイル

# === シェル設定 ===
shell-integration = zsh

# === テーマ ===
theme = Aurora

# === フォント ===
font-family = JetBrainsMonoNL Nerd Font Mono
font-thicken = true
font-thicken-strength = 1
# リガチャを無効化
font-feature = -calt
font-feature = -dlig

# === カーソル ===
cursor-style = block
cursor-style-blink = false

# === ウィンドウ ===
window-padding-x = 4
window-padding-y = 4
# 閉じる時の確認を無効化
confirm-close-surface = false

# === 入力 ===
# Option キーを Alt として扱う（Alt+キー のショートカットに必要）
macos-option-as-alt = true
# 入力中はマウスカーソルを非表示
mouse-hide-while-typing = true

# === クリップボード ===
# 選択時に自動でクリップボードにコピー
copy-on-select = clipboard

# === その他 ===
# URL をクリック可能にする
link-url = true
# スクロールバック行数
scrollback-limit = 10000

# === キーバインド ===
# クイックターミナル（どこからでも呼び出せる）
keybind = "global:ctrl+cmd+`=toggle_quick_terminal"
