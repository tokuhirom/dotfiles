;; `C-t ; loadrc` to reload.

(set-prefix-key (kbd "C-3"))

(define-key *root-map* (kbd "j") "move-focus down")
(define-key *root-map* (kbd "k") "move-focus up")
(define-key *root-map* (kbd "l") "move-focus right")
(define-key *root-map* (kbd "h") "move-focus left")

(define-key *root-map* (kbd "C-c") "exec google-chrome-stable")
(define-key *root-map* (kbd "c") "exec terminator")
(define-key *root-map* (kbd "!") "exec rofi -show run")

;; alt-tab to next frame
(define-key *top-map* (kbd "M-TAB") "fnext")

;; input windowを中央に出す。
(setq *input-window-gravity* :center)

(defcommand lock() ()
    (run-shell-command "i3lock"))

